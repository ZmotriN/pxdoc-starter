{
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.windowsEnableConpty": false,
    "terminal.integrated.env.windows": {
        "PATH": "${workspaceFolder}\\node_modules\\.bin;${workspaceFolder}\\pxdoc\\_bin\\windows;${env:PATH};${workspaceFolder}"
    },
    "terminal.integrated.env.osx": {
        "PATH": "${workspaceFolder}/node_modules/.bin:${workspaceFolder}/pxdoc/_bin/mac:${env:PATH}:${workspaceFolder}"
    },
    "filewatcher.commands": [
        {
            "match": "[\\\\/]_[^\\\\/]+\\.php$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:process"],
            "event": "onFileChange"
        },
        {
            "match": "^(?!.*[/\\\\]pxdoc[/\\\\])(?!.*\\.min\\.js$).*\\.js$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:jsmin"],
            "event": "onFileChange"
        },
        {
            "match": "[\\\\/]pxdoc[\\\\/]jscripts[\\\\/].*(?<!\\.min)\\.js$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:jsbundle"],
            "event": "onFileChange"
        },
        {
            "match": "[\\\\/](?!_)[^\\\\/]+\\.scss$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:sass:master"],
            "event": "onFileChange"
        },
        {
            "match": "[\\\\/]_[^\\\\/]+\\.scss$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:sass:slave"],
            "event": "onFileChange"
        }

    ],
    "liveServer.settings.port": 5502

}